{
  "hosting": [
    {
      "target": "firebase-demo",
      "public": "dist/firebase-demo",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "angulardemo-6a542/us-central1/hello-world",
          "function": "app"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
